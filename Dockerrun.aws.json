{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "app-files",
            "host": {
                "sourcePath": "/var/app/current"
            }
        },
        {
            "name": "nginx-config",
            "host": {
                "sourcePath": "/var/app/current/deploy/config/nginx.conf"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "redis",
            "image": "redis",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 6379,
                    "containerPort": 6379
                }
            ]
        },
        {
            "name": "app",
            "image": "toxaco/generalbaseinfrastructure:php7",
            "essential": true,
            "memory": 512,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                },
                {
                    "hostPort": 443,
                    "containerPort": 443
                }
            ],
            "links": ["redis"],
            "mountPoints": [
                {
                    "sourceVolume": "app-files",
                    "containerPath": "/var/www/html",
                    "readOnly": true
                },
                {
                    "sourceVolume": "nginx-config",
                    "containerPath": "/etc/nginx/nginx.conf",
                    "readOnly": true
                }
            ],
            "command": ["./var/www/html/deploy/provision.sh"]
        }
    ]
}